@using Topic.WebUI.Dtos.SubscriberDtos
@model UpdateSubscriberDto
@{
    ViewData["Title"] = "Abone Güncelle";
    ViewData["SubTitle"] = "Abone Bilgilerini Güncelle";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3>Abone Güncelle</h3>
<br />
<form method="post">
    <input type="hidden" asp-for="SubscriberId" />
    <label>Email</label>
    <input type="email" asp-for="Email" class="form-control" />
    <br />
    <label>Şifre</label>
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    <label>Rol</label>
    <input type="text" asp-for="Role" class="form-control" />
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>