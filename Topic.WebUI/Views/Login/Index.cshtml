@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Giriş Yap</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: url('/img/bg-login.png') no-repeat center center fixed;
            background-size: cover;
            min-height: 100vh;
        }

        .login-container {
            margin-top: 100px;
        }

        .card {
            background-color: rgba(255, 255, 255, 0.95);
        }
    </style>
</head>
<body>

    <div class="container login-container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7 col-sm-10">
                <div class="card shadow">
                    <div class="card-body">
                        <h3 class="mb-4 text-center">Giriş Yap</h3>

                        <form method="post">
                            <input type="email" name="email" class="form-control mb-2" placeholder="E-posta" required />
                            <input type="password" name="password" class="form-control mb-3" placeholder="Şifre" required />
                            <button type="submit" class="btn btn-primary w-100">Giriş Yap</button>

                            @if (ViewBag.LoginError != null)
                            {
                                <div class="alert alert-danger mt-3 text-center">
                                    @ViewBag.LoginError
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
